{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Simple react boilerplate",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "clean": "$(npm bin)/rimraf ./dist",
    "build": "NODE_ENV=production $(npm bin)/webpack --colors",
    "lint": "$(npm bin)/eslint src/**/*.jsx"
  },
  "keywords": [],
  "author": "Gilad Novik <gilad@novik.ca>",
  "license": "MIT",
  "dependencies": {
    "react": "^15.6.1",
    "react-dom": "^15.6.1"
  },
  "devDependencies": {
    "babel-core": "^6.25.0",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.1.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.3.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-react": "^7.1.0",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "html-webpack-plugin": "^2.30.1",
    "html-webpack-template": "^5.6.0",
    "less": "^2.7.2",
    "less-loader": "^4.0.5",
    "rimraf": "^2.6.1",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.4.0",
    "webpack-dev-server": "^2.6.1",
    "webpack-merge": "^4.1.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-2"
    ],
    "plugins": [
      "transform-class-properties",
      "transform-decorators-legacy"
    ]
  },
  "eslintConfig": {
    "rules": {
      "no-console": 0,
      "strict": 0,
      "comma-dangle": [
        1,
        "always-multiline"
      ],
      "quotes": [
        1,
        "single"
      ],
      "linebreak-style": [
        2,
        "unix"
      ],
      "semi": [
        1,
        "always"
      ],
      "no-empty": [
        1,
        {
          "allowEmptyCatch": true
        }
      ],
      "no-unused-vars": [
        1,
        {
          "args": "after-used",
          "argsIgnorePattern": "^_"
        }
      ],
      "max-len": [
        1,
        120,
        4,
        {
          "ignoreUrls": true,
          "ignorePattern": "/(.*)/;",
          "ignoreRegExpLiterals": true
        }
      ],
      "react/prop-types": 0,
      "react/display-name": 0,
      "react/jsx-no-bind": 2
    },
    "env": {
      "amd": true,
      "es6": true,
      "browser": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended"
    ],
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "react"
    ],
    "parser": "babel-eslint"
  }
}
